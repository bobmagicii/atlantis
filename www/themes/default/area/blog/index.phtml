					echo (new Atlantis\Element\PostListingSidebar)
					->AddClasses('NoFromLine')
					->SetTitle('Popular Posts')
					->SetSubtitle(sprintf('From %s',$Blog->Title))
					->SetItemStore($PopularPosts->Payload);
					?>
					</div>
				</div>
			</div>

		</div>
	</div>

</div>


